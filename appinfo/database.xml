<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>

	<name>*dbname*</name>
	<create>true</create>
	<overwrite>false</overwrite>

	<charset>utf8</charset>

	<table>

		<name>*dbprefix*files_accounting</name>

		<declaration>

			<field>
				<name>id</name>
				<type>integer</type>
				<default>0</default>
				<notnull>true</notnull>
				<autoincrement>1</autoincrement>
				<length>12</length>
			</field>

			<field>
				<name>user</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>64</length>
			</field>

			<field>
				<name>status</name>
				<type>boolean</type>
				<notnull>true</notnull>	
			</field>

			<field>
				<name>year</name>
				<type>integer</type>
				<notnull>true</notnull>
				<length>4</length>
			</field>

			<field>
				<name>month</name>
				<type>integer</type>
				<notnull>true</notnull>
				<length>2</length>
			</field>

			<field>
				<name>timestamp</name>
				<type>integer</type>
				<notnull>true</notnull>
				<length>11</length>
			</field>

			<field>
				<name>time_due</name>
				<type>integer</type>
				<notnull>true</notnull>
				<length>11</length>
			</field>

			<field>
				<name>home_files_usage</name>
				<type>integer</type>
				<notnull>16</notnull>
			</field>

			<field>
				<name>home_trash_usage</name>
				<type>integer</type>
				<notnull>true</notnull>
				<length>16</length>
			</field>

			<field>
				<name>backup_files_usage</name>
				<type>integer</type>
				<length>255</length>
				<notnull>false</notnull>
			</field>

			<field>
				<name>home_id</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>255</length>
			</field>

			<field>
				<name>backup_id</name>
				<type>text</type>
				<notnull>false</notnull>
				<length>255</length>
			</field>

			<field>
				<name>home_url</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>255</length>
			</field>

			<field>
				<name>backup_url</name>
				<type>text</type>
				<notnull>false</notnull>
				<length>255</length>
			</field>

			<field>
				<name>home_site</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>255</length>
			</field>

			<field>
				<name>backup_site</name>
				<type>text</type>
				<notnull>false</notnull>
				<length>255</length>
			</field>

			<field>
				<name>amount_due</name>
				<type>decimal</type>
				<notnull>true</notnull>
			</field>

			<field>
				<name>reference_id</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>255</length>
			</field>

		</declaration>

	</table>	
	
	<table>

		<name>*dbprefix*files_accounting_payments</name>

		<declaration>

			<field>
				<name>id</name>
				<type>integer</type>
				<default>0</default>
				<notnull>true</notnull>
				<autoincrement>1</autoincrement>
				<length>6</length>
			</field>

			<field>
				<name>txnid</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>20</length>
			</field>
	
			<field>
				<name>itemid</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>25</length>
			</field>

			<field>
				<name>payment_amount</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>255</length>
			</field>

			<field>
				<name>payment_status</name>
				<type>text</type>
				<notnull>true</notnull>					
			</field>
	
			<field>
				<name>created_time</name>
				<type>text</type>
				<notnull>true</notnull>
			</field>

		</declaration>

	</table>

	<table>
	
		<name>*dbprefix*files_accounting_adaptive_payments</name>
	
		<declaration>

			<field>
				<name>user</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>64</length>
			</field>

			<field>
				<name>preapproval_key</name>
				<type>text</type>
				<notnull>false</notnull>
				<length>255</length>
			</field>

			<field>
				<name>expiration</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>64</length>
			</field>

		</declaration>

	</table>

</database>
