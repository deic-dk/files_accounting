<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>

	<name>*dbname*</name>
	<create>true</create>
	<overwrite>false</overwrite>

	<charset>utf8</charset>

	<table>

		<name>*dbprefix*files_accounting</name>

		<declaration>

			<field>
				<name>fa_id</name>
				<type>integer</type>
				<default>0</default>
				<notnull>true</notnull>
				<autoincrement>1</autoincrement>
				<length>4</length>
			</field>

			<field>
				<name>user</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>64</length>
			</field>

		        <field>
				<name>status</name>
				<type>boolean</type>
				<notnull>true</notnull>	
			</field>

			<field>
				<name>month</name>
                                <type>text</type>
                                <notnull>true</notnull>
                                <length>255</length>
			</field>

			<field>
                                <name>average</name>
                                <type>text</type>
                                <notnull>true</notnull>
                                <length>255</length>
                        </field>

			<field>
                                <name>trashbin</name>
                                <type>text</type>
                                <notnull>true</notnull>
                                <length>255</length>
                        </field>

			<field>
                                <name>bill</name>
                                <type>text</type>
                                <notnull>true</notnull>
                                <length>255</length>
                        </field>
	
			 <field>
                                <name>reference_id</name>
                                <type>text</type>
                                <notnull>true</notnull>
                                <length>255</length>
                        </field>

		</declaration>

	</table>	
	
	<table>

                <name>*dbprefix*files_accounting_payments</name>

                <declaration>

                        <field>
				<name>id</name>
                                <type>integer</type>
                                <default>0</default>
                                <notnull>true</notnull>
                                <autoincrement>1</autoincrement>
                                <length>6</length>				
			</field>

			<field>
				<name>txnid</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>20</length>
			</field>
	
			<field>
				<name>itemid</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>25</length>
			</field>

			<field>
				<name>payment_amount</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>255</length>
			</field>

			<field>
				<name>payment_status</name>
				<type>text</type>
				<notnull>true</notnull>					
			</field>
	
			<field>
				<name>created_time</name>
				<type>text</type>
				<notnull>true</notnull>
			</field>
			

		</declaration>

	</table>

</database>

